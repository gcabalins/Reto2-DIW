<!DOCTYPE html>
<html>

<head>
  <title>
  </title>
  <link rel='stylesheet' href='/stylesheets/login.css' />
</head>

<body>
  <main id="content">
    <section class="login-section">
      <div class="login-body">
        <div class="login-logo">
          <img src="/images/logo.png" alt="Logo de EspaPelis" />
        </div>
        <div class="login-text">
          <h1>Welcome to EspaPelis</h1>
          <p>Please sign up to continue</p>
        </div>
        <button disabled class="login-with-google"><img src="/images/google-icon.png" alt="Logo de Google" /> Continue with
          Google</button>
        <div class="linea-or">
          <hr>
          <span>or</span>
          <hr>
        </div>
        <form action="/users" method="POST" class="signup-form">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="Name"  />

          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Email"  />

          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Password"  />

          <% if (typeof error !== 'undefined') { %>
            <div class="error-message"><%= error %></div>
          <% } %>

          <button type="submit" class="login-button">Sign Up</button>
          <button type="button" class="login-cancel" onclick="window.location.href='/'">Cancel</button>
        </form>

        
      </div>
    </section>

  </main>

</body>

</html>